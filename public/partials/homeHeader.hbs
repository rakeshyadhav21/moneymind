<script>
    function showProfile() {
        const profileDiv = document.getElementById('profile');
        console.log(profileDiv.style.display);
        profileDiv.style.display = profileDiv.style.display === 'none' ? 'block' : 'none';
    }

    document.addEventListener("DOMContentLoaded", () => {
        // Prevent body click from hiding profile when clicking inside the profile menu
        const profileDiv = document.getElementById('profile');
        if (profileDiv) {
            profileDiv.addEventListener("click", (event) => {
                event.stopPropagation();
            });
        }

        // Prevent body click from hiding profile when clicking the profile button
        const profileButton = document.getElementById("profileButton");
        if (profileButton) {
            profileButton.addEventListener("click", (event) => {
                event.stopPropagation();
            });
        }

        // Add a body click listener to hide the profile menu
        document.body.addEventListener("click", () => {
            console.log("body clicked");
            if (profileDiv && profileDiv.style.display === 'block') {
                profileDiv.style.display = 'none';
            }
        });
    });
</script>
