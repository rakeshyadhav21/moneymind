                        <li>Savings</li>
                        <li>Reports</li>
                        <li>Groups</li>
                    </ul>
                </div>
                <div id="left-panel-bottom">
                    <ul>
                        <li>Custom Categories</li>
                        <li>Profile</li>
                        <li>Account</li>
                        <li>feedback</li>
                        <li><a href='/auth/logout'>Log out</a></li>
                    </ul>
                </div>
            </div>

            <div id="right-panel">
                <div id="dashBoard">
                    <h2>Expense Overview</h2>
                    <p id="totalExpenses">Total Expenses: 0/-</p>
                    <canvas id="pieChart" width="200" height="200"></canvas> 
                </div>
                <div id="debitSection" style="margin: 20px 0; text-align: center;">
                    <h3>Total Debit This Month: â‚¹<span id="totalDebit">0</span></h3>
                    <ul id="lastDebitsList" style="list-style: none; padding: 0;">
                        <!-- Last 5 debits will be populated dynamically -->
                    </ul>
                </div>
                
            </div>
        </div>
    </div>
    <style>
        #home-link a{
            border-radius: 50px;
            font-size: 15px;
            text-decoration: none;
            background-color: #83bce3;
            color: black;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3);
        }
    </style>
</body>
</html>

   