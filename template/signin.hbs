<body id="home">

    <header>
      <div class="header">
         <div class="logo" style="margin-top: 50px;">
           <img src="html/moneymind2.png" alt="Money Mind Logo" width="250px">
         </div>
         <div class="navbar">
            <button class="menu-toggle">Menu</button>
            <ul class="menu">
                <li><a href="/">Home</a></li>
                <li><a href="#privacy-policy">Privacy Policy</a></li>
